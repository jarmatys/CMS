@model PrivacyPolicyView

@{
    ViewData["Title"] = "konfiguracja e-maila";

    ViewData["Page"] = "SettingsPrivacyPolicy";
    ViewData["Group"] = "Settings";

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-inner">

    <div class="page-header">
        <h4 class="page-title">Polityka prywatności</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="@Url.Action("Index","Admin", new {area = "admin"})">
                    <i class="flaticon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Index","Settings", new {area = "admin"})">Ustawienia</a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                Polityka prywatności
            </li>
        </ul>
    </div>

    @using (Html.BeginForm("PrivacyPolicy", "Settings", new { area = "admin" }, FormMethod.Post, true, new { @class = "login-form row" }))
    {
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Dane do polityki prywatności</h4>
                        <button class="btn btn-success ml-auto" type="submit">
                            <i class="fa fa-plus"></i>
                            Zapisz zmiany
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="login" style="background-color: white;">

                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                                @Html.HiddenFor(x => x.Id)

                                <div class="form-group">
                                    <label class="placeholder"><b>Link do głównej strony</b></label>
                                    @Html.TextBoxFor(x => x.PageUrl, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label class="placeholder"><b>Nazwa firmy</b></label>
                                    @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label class="placeholder"><b>Ulica</b></label>
                                    @Html.TextBoxFor(x => x.Street, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label class="placeholder"><b>Miasto</b></label>
                                    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label class="placeholder"><b>Kod pocztowy</b></label>
                                    @Html.TextBoxFor(x => x.ZipCode, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label class="placeholder"><b>E-mail</b></label>
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label class="placeholder"><b>Nazwa hostingodawcy</b></label>
                                    @Html.TextBoxFor(x => x.HostingName, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

